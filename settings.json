{
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true, 
        "**/node_modules": true,
        "node_modules": true 
    },
    "editor.fontSize": 14,
    "editor.tabSize": 2,
    "editor.lineNumbers": "on",

    "workbench.colorTheme": "Material Palenight for Operator Mono",
    "workbench.iconTheme": "material-icon-theme",

    "editor.detectIndentation": true,
    "editor.fontFamily": "Inconsolata, Menlo, monospace",

    // Vim settings
    "vim.disableAnnoyingNeovimMessage": true,
    "vim.autoindent": true,
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "explorer.confirmDragAndDrop": false,
    "emmet.includeLanguages": {
        "javascript": "html"
    }
}
